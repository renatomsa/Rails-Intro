<div class="d-flex align-items-center flex-column mb-5">
  <h1>To do Lists</h1>
  <h6> gerencie suas listas! </h6>
</div>


<div class="mb-4" id="todos">
  <% if @todos.present? && current_user.present? %>
    <% @todos.each do |todo| %>
      <% if todo.user_id == current_user.id %>
        <%= render partial: 'todo_card', locals: { todo: todo } %>
      <% end %>
    <% end %>
  <% end %>

</div>

<div class="d-flex justify-content-center">
  <%= link_to "Nova Lista", new_todo_path, class: "btn btn-success" %>
</div>
